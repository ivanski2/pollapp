<div class="text-center mt-5">
  <h2><%= @poll.question %></h2>
</div>

<div class="text-center mt-3">
  <%= form_with url: vote_poll_path(@poll), method: :post, local: false do %>
    <div class="form-check" id="options">
      <% @poll.options.each do |option| %>
        <label class="form-check-label">
          <%= radio_button_tag :option_id, option.id, false, class: "form-check-input style-circle" %> <%= option.content %>
        </label><br>
      <% end %>
    </div>
    <%= submit_tag "Vote", class: "btn btn-primary mt-3" %>
    <%= link_to 'Back to Polls', polls_path, class: 'btn btn-secondary mt-3' %>
  <% end %>
  <div>
    <label>Select chart type:</label><br>
    <%= radio_button_tag :chart_type, "pie", true, onclick: "changeChartType('pie')" %> Pie
    <%= radio_button_tag :chart_type, "bar", false, onclick: "changeChartType('bar')" %> Bar
    <%= radio_button_tag :chart_type, "line", false, onclick: "changeChartType('line')" %> Line
  </div>
</div>
<div class="text-center mt-5">
  <h3>Results</h3>
  <div style="width: 400px; height: 400px; margin: 0 auto;">
    <canvas id="resultsChart"></canvas>
  </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        let currentChart;

        function createChart(type) {
            const ctx = document.getElementById('resultsChart').getContext('2d');
            if (currentChart) {
                currentChart.destroy();
            }
            currentChart = new Chart(ctx, {
                type: type,
                data: {
                    labels: <%= raw @poll.options.pluck(:content).to_json %>,
                    datasets: [{
                        label: 'Votes',
                        data: <%= raw @poll.options.pluck(:vote_count).to_json %>,
                        backgroundColor: [
                            'rgba(255, 99, 132, 0.2)',
                            'rgba(54, 162, 235, 0.2)',
                            'rgba(255, 206, 86, 0.2)',
                            'rgba(75, 192, 192, 0.2)',
                            'rgba(153, 102, 255, 0.2)',
                            'rgba(255, 159, 64, 0.2)'
                        ],
                        borderColor: [
                            'rgba(255, 99, 132, 1)',
                            'rgba(54, 162, 235, 1)',
                            'rgba(255, 206, 86, 1)',
                            'rgba(75, 192, 192, 1)',
                            'rgba(153, 102, 255, 1)',
                            'rgba(255, 159, 64, 1)'
                        ],
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: true,
                    plugins: {
                        legend: {
                            position: 'top',
                        },
                    },
                }
            });
        }

        createChart('pie');

        window.changeChartType = function (type) {
            createChart(type);
        }
    });
</script>
