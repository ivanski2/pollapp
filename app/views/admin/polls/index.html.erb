<div class="container mt-5">
  <h2>All Polls</h2>
  <% if @grid.assets.present? %>
    <table class="table table-striped">
      <thead>
      <tr>
        <th>Poll Question</th>
        <th>Actions</th>
      </tr>
      </thead>
      <tbody>
      <% @grid.assets.each do |poll| %>
        <tr>
          <td><%= poll.question %></td>
          <td>
            <%= link_to "Detail", admin_poll_path(poll), class: "btn btn-info btn-sm" %>
            <%= link_to "Add New Poll", new_admin_poll_path, class: "btn btn-info btn-sm" %>
            <%= link_to "Edit", edit_admin_poll_path(poll), class: "btn btn-warning btn-sm" %>
            <%= form_with model: poll, url: duplicate_admin_poll_path(poll), method: :post, class: "d-inline" do %>
              <%= submit_tag "Duplicate", class: "btn btn-secondary btn-sm" %>
            <% end %>
            <%= form_with model: poll, url: admin_poll_path(poll), method: :delete, class: "d-inline" do %>
              <%= submit_tag "Delete", class: "btn btn-danger btn-sm", data: { confirm: "Are you sure you want to delete this poll?" } %>
            <% end %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  <% else %>
    <p>No polls found.</p>
  <% end %>
</div>
